<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Icône principale -->
    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/in_journal"
        android:contentDescription="Icône du journal"
        android:layout_marginEnd="8dp" />

    <!-- Conteneur des textes et icônes associées -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Ligne pour le titre -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageViewTitre"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/in_crayon"
                android:contentDescription="Icône du titre"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/textViewEntryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Ligne pour la date -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageViewDate"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/in_date"
                android:contentDescription="Icône de la date"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/textViewEntryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Ligne pour les tags -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageViewTage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/in_journal"
                android:contentDescription="Icône des tags"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/textViewEntryTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#888888" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
